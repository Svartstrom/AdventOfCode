pipeline {
    agent any

    stages {
        stage('Test') {
            steps {
                try {
                    echo 'Hello World'
                    //sh 'python3 main.py'
                    sh 'ls -a'
                    sh 'pytest 2023/ --junitxml=result.xml'
                } catch(err) {
                    step([$class: 'JUnitResultArchiver', testResults: '**/result.xml'])
                    throw err
                }
	        }
        }
        stage('Build') {
            steps {
                echo 'Hello from builder'
                //sh 'python3 main.py'
                sh 'ls -a'
                //sh 'pytest 2023/ --junitxml=result.xml'
	        }
        }
    }
}
